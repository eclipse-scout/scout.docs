{
  "id": "jswidgets.TilesForm",
  "type": "model",
  "displayHint": "view",
  "rootGroupBox": {
    "id": "MainBox",
    "objectType": "GroupBox",
    "fields": [
      {
        "id": "DetailBox",
        "objectType": "GroupBox",
        "gridColumnCount": 2,
        "menus": [
          {
            "id": "InsertMenu",
            "objectType": "Menu",
            "text": "Insert tile"
          },
          {
            "id": "InsertManyMenu",
            "objectType": "Menu",
            "text": "Insert many tiles"
          },
          {
            "id": "DeleteMenu",
            "objectType": "Menu",
            "text": "Delete selected tiles"
          },
          {
            "id": "SelectNextMenu",
            "objectType": "Menu",
            "text": "Select next tile"
          },
          {
            "id": "SelectAllMenu",
            "objectType": "Menu",
            "text": "Select all tiles"
          }
        ],
        "fields": [
          {
            "id": "TilesField",
            "objectType": "TilesField",
            "labelVisible": false,
            "gridDataHints": {
              "h": 4,
              "w": 2
            },
            "tiles": {
              "id": "Tiles",
              "objectType": "Tiles",
              "scrollable": true,
              "tiles": [
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 1"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 2"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 3"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 4"
                },
                {
                  "objectType": "jswidgets.SimpleTile",
                  "label": "Tile 5"
                }
              ]
            }
          },
          {
            "id": "FilterField",
            "objectType": "StringField",
            "label": "${textKey:FilterBy}",
            "labelPosition": 2,
            "updateDisplayTextOnModify": true,
            "clearable": "always",
            "gridDataHints": {
              "fillHorizontal": false,
              "widthInPixel": 300
            }
          },
          {
           "id": "StatusField",
            "objectType": "LabelField",
            "labelVisible": false,
            "gridDataHints": {
              "horizontalAlignment": 1
            }
          }
        ]
      },
      {
        "id": "PropertiesBox",
        "objectType": "GroupBox",
        "label": "Properties",
        "expandable": true,
        "fields": [
          {
            "id": "GridColumnCountField",
            "objectType": "NumberField",
            "label": "Grid Column Count"
          },
          {
            "id": "LogicalGridField",
            "objectType": "SmartField",
            "label": "Logical Grid",
            "lookupCall": "jswidgets.LogicalGridLookupCall",
            "tooltipText": "${textKey:LogicalGridWithRefTooltip}"
          },
          {
            "id": "LogicalGridColumnWidthField",
            "objectType": "NumberField",
            "label": "Logical Grid Column Width"
          },
          {
            "id": "LogicalGridRowHeightField",
            "objectType": "NumberField",
            "label": "Logical Grid Row Height"
          },
          {
            "id": "MaxContentWidthField",
            "objectType": "NumberField",
            "label": "Max Content Width"
          },
          {
            "id": "ColorSchemeField",
            "objectType": "SmartField",
            "label": "Color Scheme",
            "lookupCall": "jswidgets.ColorSchemeLookupCall"
          },
          {
            "id": "InvertColorsField",
            "objectType": "CheckBoxField",
            "label": "Invert Colors",
            "labelVisible": false
          },
          {
            "id": "WithPlaceholdersField",
            "objectType": "CheckBoxField",
            "label": "With Placeholders",
            "labelVisible": false
          },
          {
            "id": "SelectableField",
            "objectType": "CheckBoxField",
            "label": "Selectable",
            "labelVisible": false
          },
          {
            "id": "MultiSelectField",
            "objectType": "CheckBoxField",
            "label": "Multi Select",
            "labelVisible": false
          },
          {
            "id": "ScrollableField",
            "objectType": "CheckBoxField",
            "label": "Scrollable",
            "labelVisible": false
          }
        ]
      },
      {
        "id": "FormFieldPropertiesBox",
        "objectType": "jswidgets.FormFieldPropertiesBox",
        "expanded": false
      },
      {
        "id": "GridDataBox",
        "objectType": "jswidgets.GridDataBox",
        "label": "Grid Data Hints",
        "expanded": false
      }
    ]
  }
}
